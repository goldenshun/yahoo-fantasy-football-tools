<!DOCTYPE html>
<html>
<head>
    <title>Fantasy Tools</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="main">
            <div id="mainLogin">
                <h2>Where your fantasy football teams grow and prosper.</h2>
                <div>
                    @if (!ViewBag.IsUserAuthenticated)
                    {
                        @Html.ActionLink("Login to Yahoo", "AuthenticateWithYahoo", null, new { @class = "splashButton" })
        
                    }
                    else
                    {
                        @Html.ActionLink("View user leagues", "ListLeagues", "User", null, new { @class = "splashButton" })
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>

