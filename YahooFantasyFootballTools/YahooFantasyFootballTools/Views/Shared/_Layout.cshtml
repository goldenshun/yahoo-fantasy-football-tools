<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <div id="header">
            <div id="menucontainer">
                <ul id="menu">
                    
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
            </div>
        </div>
        <div id="main">
            <div id="userProfile">
                @if (ViewBag.IsUserAuthenticated)
                {
                    @Html.ActionLink("Logout", "Logout", "Home")
                }
            </div>
            @RenderBody()
        </div>
        <div id="footer">
            @if (ViewBag.IsUserAuthenticated)
            {
                <strong>Some debug information, pay no mind simpleton.</strong>
                <div>
                    <span>Access Token: </span> @ViewBag.AccessToken
                    <span>Access Token Secret: </span> @ViewBag.AccessTokenSecret
                </div>
            }
        </div>
    </div>
</body>
</html>
